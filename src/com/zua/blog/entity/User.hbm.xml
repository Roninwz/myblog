<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.zua.blog.entity.User" table="user">
		<id name="id" type="java.lang.Integer">
			<generator class="increment"></generator>
		</id>
		<!-- 一般属性· -->
	<property name="username" length="20" type="java.lang.String"></property>
	<property name="password" length="20" type="java.lang.String"></property>
	<property name="Email" length="20" type="java.lang.String"></property>
	
	</class>
</hibernate-mapping>